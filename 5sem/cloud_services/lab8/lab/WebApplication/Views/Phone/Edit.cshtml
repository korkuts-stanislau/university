@model WebApplication.ViewModels.CreatePhoneViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label>Manufacturer</label>
                <select name="manufacturerId" asp-items="Model.Manufacturers">
                </select>
            </div>
            <div class="form-group">
                <label>Country</label>
                <select name="countryId" asp-items="Model.Countries">
                </select>
            </div>
            <div class="form-group">
                <label>Model name</label>
                <input name="modelName" class="form-control" value="@ViewBag.Phone.ModelName" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="number" name="price" class="form-control" value="@ViewBag.Phone.Price" />
            </div>
            <div class="form-group">
                <input type="submit" asp-route-id="@ViewBag.Phone.RowKey" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
