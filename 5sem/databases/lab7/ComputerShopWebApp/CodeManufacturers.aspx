                EmptyDataText="Нет данных" CaptionAlign="Top" PageIndex="0">
                <Columns>
                    <asp:BoundField DataField="ManufacturerId" HeaderText="Код" SortExpression="ManufacturerId" />
                    <asp:BoundField DataField="ManufacturerName" HeaderText="Название" SortExpression="ManufacturerName" />
                </Columns>
            
        </asp:GridView>
            </td>
            <td>
            <strong>Добавить нового производителя:</strong>
                <br />
                <asp:label runat="server">Наименование производителя:</asp:label><asp:TextBox ID="TextBoxManufacturerName" runat="server"></asp:TextBox>
                <br />
            </td>
            <td>
                <asp:Button ID="ButtonAddManufacturer" runat="server" Text="Добавить" OnClick="ButtonAddManufacturer_Click" />

            </td>
    </tr>
    </table>
        </asp:Content>
