                OnRowDeleting="GridViewManufacturer_RowDeleting" 
                OnRowEditing="GridViewManufacturer_RowEditing" 
                OnRowUpdating="GridViewManufacturer_RowUpdating" PageSize="15" 
                OnPageIndexChanging="GridViewManufacturer_PageIndexChanging"
