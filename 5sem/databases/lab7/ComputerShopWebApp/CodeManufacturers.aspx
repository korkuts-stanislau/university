<%@ Page Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="CodeManufacturers.aspx.cs" Inherits="ComputerShopWebApp.CodeManufacturers" %>

    <asp:Content ID="Content1" ContentPlaceHolderID="MainContent" runat="server">
            <br />
    <table border="0">
        <tr>
        <td>
        <asp:Label ID="LabelFindManufacturer" runat="server" Text="Label">Производитель</asp:Label><asp:TextBox ID="TextBoxFindManufacturer" runat="server"></asp:TextBox>
            <asp:Button ID="ButtonFindManufacturer" runat="server" Text="Найти" OnClick="ButtonFindManufacturer_Click" />
        <br />        
