<Window x:Class="CourseApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseApp"
        mc:Ignorable="d"
        Title="Login form" Height="450" Width="450">
    <Grid>
        <Label x:Name="labelLogin" Content="Логин" HorizontalAlignment="Left" Margin="50,65,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="labelPass" Content="Пароль" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Height="28" Margin="50,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="18"/>
        <PasswordBox x:Name="passwordBoxPass" HorizontalAlignment="Left" Height="28" Margin="50,189,0,0" Password="" VerticalAlignment="Top" Width="320" FontSize="18"/>
        <Button x:Name="buttonLoginPress" Content="Войти" HorizontalAlignment="Left" Margin="50,239,0,0" VerticalAlignment="Top" Width="320" Height="40" FontSize="20" Click="ButtonLoginPress_Click"/>
        
    </Grid>
</Window>
