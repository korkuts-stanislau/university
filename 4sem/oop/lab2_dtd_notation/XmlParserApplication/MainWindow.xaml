        <Button Content="Изменить" HorizontalAlignment="Left" Margin="226,301,-332.933,0" VerticalAlignment="Top" Width="188" Height="40" Click="Button_Click_2"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="226,348,-332.933,0" VerticalAlignment="Top" Width="188" Height="40" Click="Button_Click_3"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="226,251,-332.4,0" VerticalAlignment="Top" Width="188" Height="40" Click="Button_Click_4"/>
    </Grid>
